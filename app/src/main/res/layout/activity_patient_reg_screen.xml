<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientRegScreen">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="209dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Создание карты пациента"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSkipReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:text="Пропустить"
        android:textColor="@color/btnblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="24dp"
        android:text="Без карты пациента вы не сможете заказать анализы."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="В картах пациентов будут храниться результаты анализов вас и ваших близких."
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/edFirstNameReg"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/tvbg"
        android:backgroundTint="@color/bgfive"
        android:ems="10"
        android:hint="Имя"
        android:inputType="textPersonName"
        android:paddingLeft="10sp"
        android:paddingEnd="10sp"
        android:textColorHint="@color/tvgray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/edOtchReg"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/tvbg"
        android:backgroundTint="@color/bgfive"
        android:ems="10"
        android:hint="Отчество"
        android:inputType="textPersonName"
        android:paddingLeft="10sp"
        android:paddingEnd="10sp"
        android:textColorHint="@color/tvgray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edFirstNameReg"
        app:layout_constraintStart_toStartOf="@+id/edFirstNameReg"
        app:layout_constraintTop_toBottomOf="@+id/edFirstNameReg" />

    <EditText
        android:id="@+id/edLastNameReg"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/tvbg"
        android:backgroundTint="@color/bgfive"
        android:ems="10"
        android:hint="Фамилия"
        android:inputType="textPersonName"
        android:paddingLeft="10sp"
        android:paddingEnd="10sp"
        android:textColorHint="@color/tvgray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edOtchReg"
        app:layout_constraintStart_toStartOf="@+id/edOtchReg"
        app:layout_constraintTop_toBottomOf="@+id/edOtchReg" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/tvbg"
        android:backgroundTint="@color/bgfive"
        android:ems="10"
        android:hint="Дата рождения"
        android:inputType="date"
        android:paddingLeft="10sp"
        android:paddingEnd="10sp"
        android:textColorHint="@color/tvgray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edLastNameReg"
        app:layout_constraintStart_toStartOf="@+id/edLastNameReg"
        app:layout_constraintTop_toBottomOf="@+id/edLastNameReg" />

    <TextView
        android:id="@+id/tvCreateReg"
        android:layout_width="0dp"
        android:layout_height="48sp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/tvbg"
        android:backgroundTint="@color/btnblue"
        android:gravity="center"
        android:text="Создать"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>